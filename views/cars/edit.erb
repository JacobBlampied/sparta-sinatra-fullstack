<form action="/cars/<%= @car.id %>" method="POST">

  <div class="form-group">
    <label for="exampleInputMake">Make</label>
    <input type="text" class="form-control" placeholder="Make" name="make" value="<%= @car.make %>">
  </div>

  <div class="form-group">
    <label for="exampleInputModel">Model</label>
    <input type="text" class="form-control" placeholder="Model" name="model" value="<%= @car.model %>">
  </div>

  <div class="form-group">
    <label for="exampleInputYear">Year</label>
    <input type="text" class="form-control" placeholder="Year" name="year" value="<%= @car.year %>">
  </div>

  <button type="submit" class="btn btn-default" value="PUT">Submit</button>

  <% if (@car.id != '') %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
